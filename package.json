{
  "name": "fullstack-metrics-logger",
  "version": "1.0.0",
  "description": "A package for collecting frontend and backend metrics for Express and React apps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./backend": {
      "import": "./dist/backend/core/backendMetrics.js",
      "require": "./dist/backend/core/backendMetrics.d.ts"
    },
    "./frontend": {
      "import": "./dist/frontend/core/frontendMetrics.js",
      "require": "./dist/frontend/core/frontendMetrics.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.backend.json && tsc --project tsconfig.frontend.json",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "metrics",
    "express",
    "react",
    "logging",
    "performance"
  ],
  "author": "Bailey Dunning",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "express": "^5.1.0",
    "winston": "^3.17.0",
    "web-vitals": "^5.0.3"
  }
}
